<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_shoppingcar_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">


    <CheckBox
        android:id="@+id/checkbox_select"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/checkbox_selector"
        android:button="@null"
        android:clickable="false"
        android:focusable="false"
        android:visibility="visible" />


    <ImageView
        android:id="@+id/iv_goods_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/checkbox_select"
        android:background="@mipmap/no_net_show_icon" />


    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_goods_picture"
        android:ellipsize="end"
        android:maxEms="8"
        android:singleLine="true"
        android:text="商品名称"
        android:textColor="@color/black_text"
        android:textSize="@dimen/textsize_16" />
    
    <TextView
        android:id="@+id/tv_spec_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_goods_picture"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_goods_picture"
        android:text="20"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/textsize_16" />

    <TextView
        android:id="@+id/tv_spec_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_goods_picture"
        android:layout_toRightOf="@+id/tv_spec_number"
        android:text="包"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/textsize_16" />

    <TextView
        android:id="@+id/tv_goods_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_goods_picture"
        android:layout_toRightOf="@+id/tv_spec_unit"
        android:text="/件"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/font_16" />
    
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_goods_picture"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_price_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/mdj_text_gray"
            android:textSize="@dimen/font_16"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12.00"
            android:textColor="@color/mdj_text_gray"
            android:textSize="@dimen/font_16"
            android:visibility="visible" />
        
    </LinearLayout>

  

</RelativeLayout>