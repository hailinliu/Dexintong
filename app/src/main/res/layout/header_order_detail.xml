<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_orderdetail_header"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_order_detail_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/orderdetail_header_color"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_order_detail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/order_detail_icon"/>

            <TextView
                android:id="@+id/tv_order_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_order_detail"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="完成配货"
                android:layout_marginLeft="10dp"
                android:textColor="@color/gray_text"
                android:textSize="14.0sp"
                android:visibility="visible" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.7"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_order_number_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="订单号："
                    android:textColor="@color/gray_more"
                    android:textSize="12.0sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="467566669912366699123"
                    android:textColor="@color/gray_more"
                    android:textSize="12.0sp"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="时    间："
                    android:textColor="@color/gray_more"
                    android:textSize="12.0sp" />

                <TextView
                    android:id="@+id/tv_order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="2016-01-10  08:00:20"
                    android:textColor="@color/gray_more"
                    android:textSize="12.0sp" />
            </LinearLayout>


        </LinearLayout>
        
      
        
    </LinearLayout>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.2dp"-->
        <!--android:background="@color/line_backgroud_color" />-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:id="@+id/tv_activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="平价商品"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/font_14" />
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/line_backgroud_color" />

</LinearLayout>
