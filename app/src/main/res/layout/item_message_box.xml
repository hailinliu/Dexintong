<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="15dp">

    <ImageView
        android:id="@+id/iv_message_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/message_box_icon" />

    <TextView
        android:id="@+id/tv_message_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/iv_message_icon"
        android:layout_alignTop="@+id/iv_message_icon"
        android:background="@drawable/shape_corner_bg"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="@dimen/font_10" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_message_icon">

        <TextView
            android:id="@+id/tv_message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="订单消息"
            android:textColor="@color/black_text"
            android:textSize="@dimen/font_18" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:text="10:00"
            android:textColor="@color/homepage_gray_text"
            android:textSize="@dimen/font_12" />
    </RelativeLayout>
    
    <TextView
        android:id="@+id/tv_message_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textSize="@dimen/font_16"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:ellipsize="end"
        android:maxEms="16"
        android:singleLine="true"
        android:text="亲，你有一张未读邮件，请查收请查！"
        android:layout_toRightOf="@+id/iv_message_icon"
        android:layout_alignBottom="@+id/iv_message_icon"
        android:textColor="@color/homepage_gray_text"/>
</RelativeLayout>
