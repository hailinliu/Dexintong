<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/title_model" />

    <LinearLayout
        android:id="@+id/upload_shenfenzheng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="请上传身份证的正反面照片"
            android:textColor="@color/lightblack"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/up_sfz_zheng"
            android:layout_width="250dp"
            android:layout_height="160dp"
            android:background="@drawable/shape_upload_card_bg">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/shenfenzheng_add" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_idCard_face"
                    android:layout_width="184dp"
                    android:layout_height="110dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/shenfenzheng_zheng" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="上传身份证正面"
                    android:textColor="@color/card_bg_blue" />
            </LinearLayout>

           

            <ImageView
                android:id="@+id/sfz_zheng_img"
                android:layout_width="250dp"
                android:layout_height="160dp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/up_sfz_fan"
            android:layout_width="250dp"
            android:layout_height="160dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_upload_card_bg">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/shenfenzheng_add" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_idCard_back"
                    android:layout_width="184dp"
                    android:layout_height="110dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/shenfenzheng_fan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="上传身份证反面"
                    android:textColor="@color/card_bg_blue" />
            </LinearLayout>

           

            <ImageView
                android:id="@+id/sfz_fan_img"
                android:layout_width="250dp"
                android:layout_height="160dp"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/upload_yingyezheng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="请上传营业证照片"
            android:textColor="@color/lightblack"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/up_yyz"
            android:layout_width="190dp"
            android:layout_height="260dp"
            android:background="@mipmap/yingyezheng">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/shenfenzheng_add" />

            <ImageView
                android:id="@+id/yyzz_img"
                android:layout_width="220dp"
                android:layout_height="260dp" 
                android:scaleType="fitXY"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>