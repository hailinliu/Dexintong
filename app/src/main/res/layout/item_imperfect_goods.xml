<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_my_order_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/line_backgroud_color" />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="时间："
            android:textColor="@color/gray_more"
            android:textSize="12.0sp" />
        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="2016-01-10  08:00:20"
            android:textColor="@color/gray_more"
            android:textSize="12.0sp" />
    </LinearLayout>

   

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/order_item_white"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_return_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_pre_sale_goods_pic"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="11"
            android:singleLine="true"
            android:text="红牛红牛红牛红牛红牛红牛红牛"
            android:textColor="@color/black_text"
            android:textSize="@dimen/textsize_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_pre_sale_goods_pic">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tv_return_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/font_14" />

            </LinearLayout>

          


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_pre_sale_goods_pic"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_pre_sale_goods_pic">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/new_title_color"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/tv_return_goods_single_piece_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.00"
                    android:textColor="@color/new_title_color"
                    android:textSize="@dimen/font_16" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/tv_return_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12.4"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/font_16" />

            </LinearLayout>


        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_pre_sale_goods_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/cb_shopcar"
            android:layout_toRightOf="@+id/cb_shopcar"
            android:src="@mipmap/no_net_show_icon" />

    </RelativeLayout>

    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/gray_background" />

    <RelativeLayout
        android:id="@+id/rl_replace_return_goods_status"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_replace_return_goods_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="已完成..."
            android:textSize="@dimen/font_14" />
    </RelativeLayout>

</LinearLayout>