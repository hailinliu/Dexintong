<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="225dp"
    android:background="@color/white"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/no_net_show_icon" />

        <TextView
            android:id="@+id/tv_sell_out_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_sell_out_text_bg"
            android:gravity="center"
            android:text="售罄"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="@dimen/sell_out_textsize" />

    </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:text="n牛栏山chenniang"
            android:lines="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black_text"
            android:textSize="@dimen/font_14" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_create_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="生产日期:"
            android:textColor="@color/homepage_gray_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text=""
            android:lines="1"
            android:textColor="@color/homepage_gray_text"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="规格:"
                android:textColor="@color/homepage_gray_text"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/tv_goods_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="64"
                android:textColor="@color/homepage_gray_text"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/tv_goods_spec_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="包"
                android:textColor="@color/homepage_gray_text"
                android:textSize="@dimen/font_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/件"
                android:textColor="@color/homepage_gray_text"
                android:textSize="@dimen/font_12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_spike"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="库存"
                android:textColor="@color/homepage_gray_text"
                android:textSize="@dimen/font_12" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/homepage_gray_text"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/tv_stock_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="@color/homepage_gray_text"
                android:textSize="@dimen/font_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="件"
                android:textColor="@color/homepage_gray_text"
                android:textSize="@dimen/font_12" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_money_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_money"
            android:layout_centerVertical="true"
            android:text="￥"
            android:textColor="@color/red_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_money_icon"
            android:text="9.00"
            android:textColor="@color/red_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_original_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_money"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/tv_money"
            android:layout_centerVertical="true"
            android:text="原价:"
            android:textColor="@color/gray_text"
            android:visibility="gone"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_original_price_text"
            android:layout_alignBottom="@+id/tv_money"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/gray_text"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_add_shopcar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/add_shangpin2" />
    </RelativeLayout>

</LinearLayout>