<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_shoppingcar_item"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/white"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_prsent_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="赠品"
        android:textColor="@color/new_title_color"
        android:textSize="@dimen/font_12"
        android:layout_toLeftOf="@+id/iv_goods_icon"
        android:layout_marginRight="3dp"
        android:visibility="gone" />
    

    <ImageView

        android:id="@+id/iv_goods_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/cb_shopcar"
        android:background="@mipmap/no_net_show_icon" />

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_goods_icon"
        android:ellipsize="end"
        android:maxEms="8"
        android:singleLine="true"
        android:text="红牛红牛红牛红牛红牛红牛红牛"
        android:textColor="@color/black_text"
        android:textSize="@dimen/textsize_16" />

    <TextView
        android:id="@+id/tv_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="删除"
        android:textSize="@dimen/font_16"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_goods_standard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_goods_icon"
        android:text="500g/包"
        android:textColor="@color/mdj_text_gray"
        android:textSize="@dimen/font_14" />

    <TextView
        android:id="@+id/tv_number_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/tv_number"
        android:text="X"
        android:textColor="@color/mdj_text_gray"
        android:textSize="@dimen/font_14"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:text="10"
        android:textColor="@color/mdj_text_gray"
        android:textSize="@dimen/font_14"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_money_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_goods_icon"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_goods_icon"
        android:text="￥"
        android:textColor="@color/black_text"
        android:textSize="@dimen/textsize_16" />

    <TextView
        android:id="@+id/tv_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_goods_icon"
        android:layout_toRightOf="@+id/tv_money_icon"
        android:text="6.00"
        android:textColor="@color/black_text"
        android:textSize="@dimen/textsize_16" />

    <TextView
        android:id="@+id/tv_goods_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_goods_icon"
        android:layout_toRightOf="@+id/tv_goods_price"
        android:text="/包"
        android:textColor="@color/black_text"
        android:textSize="@dimen/font_16" />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_goods_icon"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mdj_text_gray"
            android:text="*"/>
        <TextView
            android:id="@+id/tv_goods_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mdj_text_gray"
            android:text="55"/>
        
    </LinearLayout>
    

    <!--android:layout_alignBottom="@+id/iv_goods_icon"-->
    <LinearLayout
        android:id="@+id/ll_edit_goosNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_reduce"
            android:layout_width="35dp"
            android:layout_height="26dp"
            android:background="@mipmap/reduce_icon"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_edit_goods_number"
            android:layout_width="40dp"
            android:layout_height="26dp"
            android:layout_marginRight="-1dp"
            android:layout_marginLeft="-1dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/amount_backgroud_icon"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/gray_text"
            android:textSize="17.0sp" />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="35dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/add_icon"
            android:visibility="visible" />
    </LinearLayout>
    

</RelativeLayout>