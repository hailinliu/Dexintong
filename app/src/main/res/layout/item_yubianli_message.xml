<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <ImageView
        android:id="@+id/iv_yubianli_message_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/no_net_show_icon" />

    <TextView
        android:id="@+id/tv_yubianli_msg_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_18"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:ellipsize="end"
        android:maxEms="11"
        android:singleLine="true"
        android:text="亲，你有一张未读邮件，请查收请查！"
        android:layout_toRightOf="@+id/iv_yubianli_message_icon"
        android:textColor="@color/black_text"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_yubianli_message_icon"
        android:layout_toRightOf="@+id/iv_yubianli_message_icon">

        <TextView
            android:id="@+id/tv_yubianli_msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="2017-01-15 20:30:15"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/font_16" />

        
    </RelativeLayout>
   
    
   
</RelativeLayout>
