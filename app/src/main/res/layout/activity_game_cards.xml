<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_cards"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.runtai.newdexintong.module.homepage.activity.GameCardsActivity">

    <include layout="@layout/title_model" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_background"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_game_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tv_game_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/textView2"
                android:background="@color/white"
                android:hint="游戏名称"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="游戏名称 :"
                android:textColor="#000000"
                android:textSize="@dimen/font_14" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_game_account"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0.5dp"
            android:background="#ffffff"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="游戏账号 :"
                android:textColor="#000000"
                android:textSize="@dimen/font_14" />


            <EditText
                android:id="@+id/et_game_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/textView4"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="请输入游戏账号"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="@color/black"
                android:textSize="14.0sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_denomation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0.5dp"
            android:background="#ffffff"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tv_recharge_denomation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="充值面额 :"
                android:textColor="#000000"
                android:textSize="@dimen/font_14" />


            <TextView
                android:id="@+id/tv_denomation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_recharge_denomation"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text="请选择充值面额"
                android:textColor="@color/gray_text"
                android:textSize="14.0sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_buy_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0.5dp"
            android:background="#ffffff"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tv_buy_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="购买数量 :"
                android:textColor="#000000"
                android:textSize="@dimen/font_14" />
            
            <TextView
                android:id="@+id/tv_buy_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_buy_number_text"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text="请选择购买数量"
                android:textColor="@color/gray_text"
                android:textSize="14.0sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_recharge_area"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0.5dp"
            android:background="#ffffff"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tv_recharge_area_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="充值区域 :"
                android:textColor="#000000"
                android:textSize="@dimen/font_14" />


            <TextView
                android:id="@+id/tv_recharge_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_recharge_area_text"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text="请选择充值区域"
                android:textColor="@color/gray_text"
                android:textSize="14.0sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_pay_money"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0.5dp"
            android:background="#ffffff"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/textView6"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pay_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textColor="@color/black"
                    android:textSize="14.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/black"
                    android:textSize="14.0sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="应收金额 :"
                android:textColor="#000000"
                android:textSize="@dimen/font_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- 充值 -->
            <Button
                android:id="@+id/btn_recharge_now"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/button_left_margin"
                android:layout_marginRight="@dimen/button_right_margin"
                android:background="@drawable/shape_button_red_color_bg"
                android:text="立即充值"
                android:textColor="@color/white"
                android:textSize="@dimen/button_textSize" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
