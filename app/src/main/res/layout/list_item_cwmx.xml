<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cwmx_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-02-14" />

            <TextView
                android:id="@+id/cwmx_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:36" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cwmx_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/add_shangpin2" />

            <TextView
                android:id="@+id/cwmx_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="加款"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_pay_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5.5"
            android:gravity="center"
            android:text="余额支付"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/cwmx_account_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8.5"
            android:gravity="center"
            android:text="18037690267"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14" />


        <TextView
            android:id="@+id/cwmx_money"
            android:layout_width="0dp"
            android:layout_weight="4.5"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="+1000"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14" />
        
    </LinearLayout>
</LinearLayout>