<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:padding="10dp">
    
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_weight="1.8"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/font_14"
        android:text="2017-02-02"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="博卡8小时间"
        android:ellipsize="end"
        android:maxEms="5"
        android:singleLine="true"
        android:textSize="@dimen/font_14" />

    <!--<LinearLayout-->
        <!--android:id="@+id/rl_name_and_spec"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center_horizontal"-->
        <!--android:layout_weight="2"-->
        <!--android:orientation="vertical">-->

      <!---->

        <!--<TextView-->
            <!--android:id="@+id/tv_spec"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="15个/件"-->
            <!--android:visibility="gone"-->
            <!--android:textSize="@dimen/font_14" />-->


    <!--</LinearLayout>-->


    <RelativeLayout
        android:id="@+id/rl_brand_and_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        >

        <TextView
            android:id="@+id/tv_award_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:maxEms="4"
            android:singleLine="true"
            android:text="壹元尊享"
            android:textSize="@dimen/font_14" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_award_name"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_left_bracket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_brand"
                android:text="(￥"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_brand"
                android:layout_toRightOf="@+id/tv_left_bracket"
                android:text="2.5"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/tv_right_bracket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_brand"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_price"
                android:text=")"
                android:textSize="@dimen/font_14" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_14"
            android:text="X"/>

        <TextView
            android:id="@+id/tv_record_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_14"
            
            android:text="22"/>

    </LinearLayout>
    
    <TextView
        android:id="@+id/tv_exchange_state"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="wrap_content" 
        android:textSize="@dimen/font_14"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:textColor="@color/blue_text"
        android:text="兑奖成功"
        />


</LinearLayout>
