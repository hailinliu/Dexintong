<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_shoppingcar_item"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/white"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_prsent_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@+id/img_shoppingCarItem"
        android:text="赠品"
        android:textColor="@color/new_title_color"
        android:textSize="@dimen/font_12"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/cb_shopcar"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/checkbox_selector"
        android:button="@null"
        android:clickable="false"
        android:focusable="false"
        android:visibility="invisible" />

    <!--<ImageView-->
    <!--android:id="@+id/cb_shopcar"-->
    <!--android:layout_width="23dp"-->
    <!--android:layout_height="23dp"-->
    <!--android:layout_centerVertical="true"-->
    <!--android:layout_marginLeft="5dp"-->
    <!--android:button="@null"-->
    <!--android:clickable="false"-->
    <!--android:focusable="false"-->
    <!--android:src="@mipmap/xuan_2"-->
    <!--android:visibility="invisible" />-->

    <ImageView

        android:id="@+id/img_shoppingCarItem"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/cb_shopcar"
        android:background="@mipmap/no_net_show_icon" />

    <!--<ImageView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginLeft="5dp"-->
    <!--android:layout_alignTop="@+id/img_shoppingCarItem"-->
    <!--android:layout_toRightOf="@+id/cb_shopcar"-->
    <!--android:src="@mipmap/present_goods_icon"/>-->

    <TextView
        android:id="@+id/tv_present"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/img_shoppingCarItem"
        android:ellipsize="end"
        android:maxEms="10"
        android:singleLine="true"
        android:text="[赠品]"
        android:visibility="gone"
        android:textColor="@color/new_title_color"
        android:textSize="@dimen/textsize_16" />
    

    <TextView
        android:id="@+id/item_goodsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_present"
        android:ellipsize="end"
        android:maxEms="7"
        android:singleLine="true"
        android:text="红牛红牛红牛红牛红牛红牛红牛"
        android:textColor="@color/black_text"
        android:textSize="@dimen/textsize_16" />
    <TextView
        android:id="@+id/tv_isdirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_goodsName"
        android:text="[直配]"
        android:textColor="@color/black_text"
        android:textSize="@dimen/textsize_16" />

    <TextView
        android:id="@+id/tv_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="删除"
        android:textSize="@dimen/font_16"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/img_shoppingCarItem"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_spec_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_spec_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="包"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/font_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/件"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/font_14" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_number_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/tv_number"
        android:text="X"
        android:textColor="@color/mdj_text_gray"
        android:textSize="@dimen/font_14"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:text="10"
        android:textColor="@color/mdj_text_gray"
        android:textSize="@dimen/font_14"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_money_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_shoppingCarItem"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/img_shoppingCarItem"
        android:text="￥"
        android:textColor="@color/red_text_color"
        android:textSize="@dimen/textsize_16" />

    <TextView
        android:id="@+id/item_goodsPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_shoppingCarItem"
        android:layout_toRightOf="@+id/tv_money_icon"
        android:text="6.00"
        android:textColor="@color/red_text_color"
        android:textSize="@dimen/textsize_16" />
    

    <TextView
        android:id="@+id/tv_item_totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_shoppingCarItem"
        android:layout_alignParentRight="true"
        android:text="￥12.4"
        android:textColor="@color/mdj_text_gray"
        android:textSize="@dimen/font_16"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/ll_edit_goosNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_shoppingCarItem"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/item_jian"
            android:layout_width="35dp"
            android:layout_height="26dp"
            android:background="@mipmap/reduce_icon"
            android:visibility="visible" />

        <TextView
            android:id="@+id/item_goodsNum"
            android:layout_width="40dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="-1dp"
            android:layout_marginRight="-1dp"
            android:background="@mipmap/amount_backgroud_icon"
            android:gravity="center"
            android:text="1"
            android:visibility="visible"
            android:textColor="@color/gray_text"
            android:textSize="16.0sp" />
        <TextView
            android:id="@+id/tv_present_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="-1dp"
            android:layout_marginRight="-1dp"
            android:gravity="center"
            android:text="1"
            android:visibility="gone"
            android:textColor="@color/gray_text"
            android:textSize="16.0sp" />
        
        <TextView
            android:id="@+id/tv_present_number_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="-1dp"
            android:layout_marginRight="-1dp"
            android:gravity="center"
            android:text="件"
            android:textColor="@color/gray_text"
            android:visibility="gone"
            android:textSize="16.0sp" />

        <ImageView
            android:id="@+id/item_jia"
            android:layout_width="35dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/add_icon"
            android:visibility="visible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/hasNoGood"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:visibility="gone" />

</RelativeLayout>