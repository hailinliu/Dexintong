<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_popuwindow_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_popuwindow_content"
        android:background="@color/popuwindow_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_pay_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/close" />

            <TextView
                android:id="@+id/pay_title"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="10dp"
                android:text="请输入支付密码"
                android:textColor="@color/black"
                android:textSize="@dimen/font_18" />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_input"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/rl_pay_password"
            android:layout_margin="10dp"
            android:background="@drawable/shape_button_gray_edge_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pay_box1"
                style="@style/InputTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/pay_box2"
                style="@style/InputTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/pay_box3"
                style="@style/InputTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/pay_box4"
                style="@style/InputTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/pay_box5"
                style="@style/InputTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/pay_box6"
                style="@style/InputTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_forget_pay_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ll_input"
            android:layout_marginRight="10dp"
            android:text="忘记密码?"
            android:textColor="@color/blue_order_status_text"
            android:textSize="@dimen/font_14" />

        <LinearLayout
            android:id="@+id/keyboard"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/tv_forget_pay_password"
            android:layout_marginTop="30dp"
            android:background="@color/light_gray"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_above="@+id/keyboard"
                android:layout_alignParentLeft="true"
                android:background="@color/light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pay_keyboard_one"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gride"
                    android:contentDescription="@string/action_settings"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/pay_keyboard_two"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gride"
                    android:contentDescription="@string/action_settings"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="#000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/pay_keyboard_three"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gride"
                    android:contentDescription="@string/action_settings"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="#000"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pay_keyboard_four"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gride"
                    android:contentDescription="@string/action_settings"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="#000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/pay_keyboard_five"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gride"
                    android:contentDescription="@string/action_settings"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="#000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/pay_keyboard_sex"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gride"
                    android:contentDescription="@string/action_settings"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="#000"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pay_keyboard_seven"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gride"
                    android:contentDescription="@string/action_settings"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="#000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/pay_keyboard_eight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gride"
                    android:contentDescription="@string/action_settings"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="#000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/pay_keyboard_nine"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gride"
                    android:contentDescription="@string/action_settings"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="#000"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pay_keyboard_space"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/light_gray"
                    android:clickable="false"
                    android:contentDescription="@string/action_settings"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/pay_keyboard_zero"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gride"
                    android:contentDescription="@string/action_settings"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#000"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/light_gray">

                    <ImageView
                        android:id="@+id/pay_keyboard_del"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:contentDescription="@string/action_settings"
                        android:gravity="center"
                        android:src="@mipmap/face_del_icon"
                        android:textColor="#000"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
